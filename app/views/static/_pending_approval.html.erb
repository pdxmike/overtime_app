<% pending_approvals.each do |pending_approval| %>
<div class="homepage-block col-md-3">
  <h4><%= pending_approval.user.full_name %></h4>
  <p><strong>OT Date:</strong> <%= pending_approval.date %></p>
  <p><strong>Rationale:</strong> <%= truncate(pending_approval.rationale, length: 60)%></p>
  <div class="row">
    <div class="col-md-6"><%= link_to 'Approve', approve_post_path(pending_approval), class: 'btn btn-success', id: "approve_#{pending_approval.id}" %></div>
    <div class="col-md-6"><%= link_to 'Review', edit_post_path(pending_approval), class: 'btn btn-warning' %></div>
  </div>
</div>
<% end %>
