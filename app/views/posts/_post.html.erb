<tr>
  <td><%= post.date %></td>
  <td><%= post.daily_hours %></td>
  <td class="hidden-xs"><%= link_to truncate(post.work_performed), post %></td>
  <td><%= label_status(post.status) %></td>
  <td><%= link_to '', edit_post_path(post), id: "edit_#{post.id}", class: 'glyphicon glyphicon-pencil index-icons' if policy(post).update? %></td>
  <td><%= link_to '', post_path(post), id: "delete_post_#{post.id}_from_index", method: :delete,
            data: { confirm: 'Are you sure?'}, class: 'glyphicon glyphicon-trash index-icons' %></td>
</tr>
