<h1>Posts</h1>

<table class='table table-hover table-striped'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Hours</th>
      <th class="hidden-xs">Rationale</th>
      <th>Status</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody id="posts">
    <%= render @posts %>
  </tbody>
</table>

<div class="text-center" id="paginator">
  <%= paginate @posts, remote: true %>
</div>
